<body>
  
  <br><br><br>  <br><br><% if(msg) { %> 
    <center><h1 id='msg'style="color: red;"><b><%= msg%></b></h1></center><br><br>
    <% } else {%><center><h1 style="color: white;" id="msg">Register a new account</h1></center><br><br>
      <% } %>
     
      <form   class="col-lg-6 offset-lg-3" action="/register" method="POST"onsubmit="register()">
        <div class="form-group">
          <label for="name" style="color: white !important;">Username</label>
          <input type="text" name="name"class="form-control" id="name" aria-describedby="name" placeholder="Username" required>
        </div>
        <div class="form-group">
       
          <label for="email" style="color: white !important;">Email</label>
          <input type="email" name="email"class="form-control" id="email" aria-describedby="email" placeholder="Email" required>
        
        </div>
        <div class="form-group">
          <label for="password" style="color: white !important;">Password</label>
          <input type="password" name="password" class="form-control" id="password" placeholder="Password" required>
        </div>

        <button type="submit" class="btn btn-success" id="loginb">Register</button>
        <a href="/login" class="btn btn-outline-light" role="button" aria-pressed="true" style="text-align: right !important;">Login instead</a>
      
      </form>
      <br> <br> <br> <br> <br>
  
  
<script src="/scripts/script.js"></script>
</body>

